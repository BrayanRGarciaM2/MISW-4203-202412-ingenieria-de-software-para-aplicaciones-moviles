<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_text"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vinilos"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Vinilos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.album.list.AlbumListActivity"
            android:exported="true"
            android:label="@string/title_activity_album_list"
            android:theme="@style/Theme.Vinilos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.album.detail.AlbumDetailActivity"
            android:exported="true"
            android:label="@string/title_activity_album_detail"
            android:theme="@style/Theme.Vinilos">

        </activity>
        <activity
            android:name=".view.collector.login.CollectorMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_collector_menu"
            android:theme="@style/Theme.Vinilos" />
        <activity
            android:name=".view.collector.login.CollectorLogInActivity"
            android:exported="false"
            android:label="@string/title_activity_collector_log_in"
            android:theme="@style/Theme.Vinilos" />
        <activity
            android:name=".view.guest.MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.Vinilos" />
        <activity
            android:name=".view.artist.ArtistViewActivity"
            android:exported="false"
            android:label="@string/title_activity_artists"
            android:theme="@style/Theme.Vinilos" />
        <activity
            android:name=".view.collector.list.CollectorListActivity"
            android:exported="false"
            android:label="@string/title_activity_collector_list"
            android:theme="@style/Theme.Vinilos" />
    </application>

</manifest>